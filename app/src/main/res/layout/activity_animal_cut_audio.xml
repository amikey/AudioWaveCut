<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_animal_cut_audio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chenhangye.audiowavecut.activity.AnimalCutAudioActivity">

    <include layout="@layout/widget_title_bar"/>

    <com.example.chenhangye.audiowavecut.View.AudioViewCombination
        android:id="@+id/act_animalecut_Combination"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <View
        android:background="@color/default_txt_black_second"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/act_animal_cut_time"
        android:textSize="16sp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="00:00.60-00:05.90"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <TextView
        android:layout_gravity="center"
        android:text="拖动两条剪切先可选择保留区域"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"/>
</LinearLayout>
